@{
    Layout = "~/Areas/Admin/Views/Shared/Layout/_LayoutAdmin.cshtml";
}

@using TagosysWeb.Core.DTO.DtoOutput;
@model TagosysWeb.Core.DTO.DtoOutput.PageOutput;

<section class="content-header">
    <div>
        <h1>
            List of page
            <a class="btn btn-primary" href="~/Admin/Page/AddUpdatePageForm" style="float:right;"> Add Page</a>
        </h1>
    </div>
</section>


<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Page</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="About" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tittle</th>
                                  @*  <th>IsActive</th>*@
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt </th>
                                   @* <th>Action </th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in ViewData["pageList"] as List<PageOutput>)
                                {
                                    <tr>
                                        <td>@data.Id</td>
                                        <td>@data.Tittle</td>
                                       
                                        
                                        @*<td>
                                            <select onchange="updateProjectStatus(@data.Id)">
                                                @if (data.IsActive == true)
                                                {
                                                    <option value="Active" selected>Active</option>
                                                    <option value="inActive">InActive</option>
                                                }
                                                else
                                                {
                                                    <option value="Active">Active</option>
                                                    <option value="inActive" selected>InActive</option>
                                                }
                                            </select>
                                        </td>*@

                                        <td>@data.CreatedAt</td>
                                        <td>@data.UpdatedAt</td>
                                       @* <td>
                                            <a class="btn btn-primary" href="~/Admin/Page/AddUpdatePageForm/@data.Id">Edit/View</a>

                                            <a class="btn btn-danger" href="~/Admin/Page/pageDeleteById/@data.Id"><i class="fa fa-trash"> </i> Delete</a>
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

    </div>

</section>

<script>
    function updateProjectStatus(Id) {
        window.location.href = "/../../Admin/Page/ActiveInActive/" + Id
    }
</script>
@await Component.InvokeAsync("Toaster")