@{
    Layout = "~/Areas/Admin/Views/Shared/Layout/_LayoutAdmin.cshtml";
}

@using TagosysWeb.Core.DTO.DtoOutput;
@model TagosysWeb.Core.DTO.DtoOutput.UserOutput;




<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">UserList</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table id="About" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email </th>
                                    <th>Password </th>
                                    <th>IsActive</th>
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in ViewData["userList"] as List<UserOutput>)
                                {
                                    <tr>
                                        <td>@data.Id</td>
                                        <td>@data.Name</td>
                                        <td>@data.Email</td>
                                        <td>@data.Password</td>
                                        <td>
                                            <select onchange="updateUserStatus(@data.Id)">
                                                @if (data.IsActive == true)
                                                {
                                                    <option value="Active" selected>Active</option>
                                                    <option value="inActive">InActive</option>
                                                }
                                                else
                                                {
                                                    <option value="Active">Active</option>
                                                    <option value="inActive" selected>InActive</option>
                                                }
                                            </select>
                                        </td>

                                        <td>@data.CreatedAt</td>
                                        <td>@data.UpdatedAt</td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

        </div>

    </div>

</section>

<script>
    function updateUserStatus(Id) {
        window.location.href = "/../../Admin/Auth/ActiveInActive/" + Id
    }
</script>
